<div id="product-form">
  <%= form_for @product do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :base_price %>
    <%= f.text_field :base_price %>


    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :quantity_on_hand %>
    <%= f.text_field :quantity_on_hand %>

    <%= f.label :color %>
    <%= f.text_field :color %>

    <%= f.submit nil, class: "btn" %>
  <% end %>
</div>